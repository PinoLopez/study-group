{
  "Logging": {
    "LogLevel": {
      // Default log level for all categories - Debug shows more detailed information
      "Default": "Debug",
      
      // ASP.NET Core logs - Warning level to reduce noise from framework logs
      "Microsoft.AspNetCore": "Warning",
      
      // Entity Framework SQL queries - Information level to see SQL commands in console
      // This helps during development to see what queries EF is generating
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  }
}
